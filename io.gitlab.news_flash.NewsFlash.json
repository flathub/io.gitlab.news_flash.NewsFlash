{
    "app-id" : "io.gitlab.news_flash.NewsFlash",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "47",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "add-extensions": {
        "org.freedesktop.Platform.ffmpeg-full": {
            "version": "24.08",
            "directory": "lib/ffmpeg",
            "add-ld-path": ".",
            "no-autodownload": false,
            "autodelete": false
        }
    },
    "command" : "io.gitlab.news_flash.NewsFlash",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri",
        "--own-name=org.mpris.MediaPlayer2.Newsflash"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "env" : {
            "CARGO_HOME" : "/run/build/newsflash/cargo",
            "PASSWORD_CRYPT_KEY" : "@PASSWORD_CRYPT_KEY@"
        }
    },
    "modules" : [
        {
            "name": "gtuber",
            "buildsystem": "meson",
            "config-opts": [
                "-Dintrospection=disabled",
                "-Dvapi=disabled",
                "-Dgst-gtuber=enabled"
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Rafostar/gtuber.git",
                    "commit": "f5a64d442c18ae2fa732a851ccb4859c8a45d944"
                }
            ]
        },
        {
            "name": "clapper",
            "buildsystem": "meson",
            "config-opts": [
                "-Dclapper=enabled",
                "-Dclapper-gtk=enabled",
                "-Dclapper-app=disabled",
                "-Dintrospection=enabled",
                "-Dvapi=enabled"
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Rafostar/clapper.git",
                    "tag": "0.6.1"
                }
            ]
        },
        {
            "name": "blueprint-compiler",
            "buildsystem": "meson",
            "cleanup": ["*"],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
                    "tag": "v0.12.0"
                }
            ]
        },
        {
            "name" : "newsflash",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://gitlab.com/api/v4/projects/8320003/packages/generic/newsflash/3.3.4/newsflash-3.3.4.tar.xz",
                    "sha256": "adc28575f2bc2f3bcda8d1f1e63bb12839bef0f5b47200df18fb9a0e18cfc83b"
                }
            ]
        }
    ],
    "cleanup-commands": [
        "mkdir -p /app/lib/ffmpeg"
    ]
}
