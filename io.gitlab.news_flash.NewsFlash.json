{
    "app-id" : "io.gitlab.news_flash.NewsFlash",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "45",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command" : "io.gitlab.news_flash.NewsFlash",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "env" : {
            "CARGO_HOME" : "/run/build/newsflash/cargo",
            "PASSWORD_CRYPT_KEY" : "@PASSWORD_CRYPT_KEY@"
        }
    },
    "modules" : [
        {
            "name": "blueprint-compiler",
            "buildsystem": "meson",
            "cleanup": ["*"],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
                    "tag": "v0.10.0"
                }
            ]
        },
        {
            "name": "webp-pixbuf-loader",
            "buildsystem": "meson",
            "build-options": {
                "env": {
                    "GDK_PIXBUF_MODULEDIR": "/app/lib/newsflash/gdk-pixbuf/2.10.0/"
                }
            },
            "config-opts": [
                "-Dgdk_pixbuf_moduledir=/app/lib/newsflash/gdk-pixbuf/2.10.0/"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/aruiz/webp-pixbuf-loader.git",
                    "commit": "36b3df08af61887f3558e4d783e8710627a7a4b7",
                    "tag": "0.2.2"
                }
            ],
            "post-install": [
                "gdk-pixbuf-query-loaders > $GDK_PIXBUF_MODULEDIR/loaders.cache"
            ]
        },
        {
            "name" : "newsflash",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://gitlab.com/api/v4/projects/8320003/packages/generic/newsflash/3.1.2/newsflash-3.1.2.tar.xz",
                    "sha256": "ecb47e98e94b17e82d186c2a59230f724d7e29bad18a659d66894dd290a2fca0"
                }
            ]
        }
    ]
}
